---
import Ai from '@/icons/Ai.astro'
import Github from '../icons/Github.astro'
---

<header class='flex justify-between items-center'>
  <div class='flex items-center'>
    <a
      href='/'
      class='group flex text-4xl max-h-[40px] max-w-[100px] lg:text-4xl text-white font-bold hover:cursor-pointer'
    >
      <span class='group-hover:text-gray-400'>Doc</span>
      <Ai />
    </a>
  </div>

  <a
    href='https://github.com/nicomelendez/doc-ai'
    class='text-white bg-[#24292F] hover:bg-[#24292F]/90 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium rounded-lg text-xs px-3 py-2.5 sm:px-5 sm:py-2.5 text-center inline-flex items-center'
    target='_blank'
    rel='noopener noreferrer'
  >
    <Github />
    Repositorio
  </a>
</header>
